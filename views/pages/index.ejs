/* Hero Section */
/* Hero Section */
#hero {
    position: relative;
    height: 100vh;
    background: #1f1f1f;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 0 20px;
    font-family: 'Poppins', sans-serif;
    z-index: 0;
}

/* Hero Background */
.hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
    background: linear-gradient(45deg, #1f8a70, #3a5c7b);
    animation: gradientAnimation 10s ease infinite;
}

.hero-shape {
    position: absolute;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    animation: shapeAnimation 10s infinite linear;
}

.hero-shape:nth-child(1) {
    width: 300px;
    height: 300px;
    top: 10%;
    left: 20%;
    animation-duration: 15s;
}

.hero-shape:nth-child(2) {
    width: 400px;
    height: 400px;
    top: 50%;
    right: 30%;
    animation-duration: 20s;
}

@keyframes gradientAnimation {
    0% { background: linear-gradient(45deg, #1f8a70, #3a5c7b); }
    50% { background: linear-gradient(45deg, #3a5c7b, #1f8a70); }
    100% { background: linear-gradient(45deg, #1f8a70, #3a5c7b); }
}

@keyframes shapeAnimation {
    0% { transform: scale(1); }
    50% { transform: scale(1.3); opacity: 0.8; }
    100% { transform: scale(1); }
}

/* Hero Content */
.hero-content {
    display: flex;
    justify-content: space-between;
    position: relative;
    z-index: 2;
    max-width: 1200px;
    width: 100%;
    padding: 0 20px;
    align-items: center;
}

/* Left side - Title & Description */
.hero-left {
    flex: 1;
    position: relative;
    text-align: left;
    z-index: 1;
    padding-left: 20px;
    animation: fadeInLeft 1s ease-out;
}

.hero-title {
    font-size: 4.5rem;
    font-weight: 700;
    margin-bottom: 10px;
    position: relative;
    display: inline-block;
    letter-spacing: 2px;
    animation: titleMove 1.2s ease-out;
}

.hero-title::before, .hero-title::after {
    content: "";
    position: absolute;
    background-color: #ff9900;
    height: 5px;
    width: 50px;
    bottom: -5px;
    transition: all 0.3s ease;
}

.hero-title::before {
    left: 0;
    transform: scaleX(0);
    transform-origin: left center;
}

.hero-title::after {
    right: 0;
    transform: scaleX(0);
    transform-origin: right center;
}

.hero-title:hover::before, .hero-title:hover::after {
    transform: scaleX(1);
}

.hero-subtitle {
    font-size: 3rem;
    font-weight: 600;
    margin-bottom: 20px;
    position: relative;
    display: inline-block;
    color: #ff9900;
    letter-spacing: 1px;
    animation: subtitleMove 1.4s ease-out;
}

.hero-description {
    font-size: 1.2rem;
    max-width: 600px;
    line-height: 1.6;
    color: #fff;
    animation: fadeInText 1.8s ease-out;
}

/* Right side - Your Image */
.hero-right {
    flex: 1;
    text-align: center;
    z-index: 1;
}

.image-container {
    animation: fadeInRight 2s ease-out;
}

.hero-image {
    border-radius: 50%;
    width: 250px;
    height: 250px;
    object-fit: cover;
    margin-top: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

/* CTA Container */
.cta-container {
    text-align: center;
    margin-top: 30px;
}

.cta-btn {
    background: #1f8a70;
    padding: 15px 40px;
    font-size: 1.1rem;
