 <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
 <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
 <script src="https://cdn.jsdelivr.net/npm/paroller.js@1.1.0/dist/jquery.paroller.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/11.0.5/swiper-bundle.min.js" integrity="sha512-Ysw1DcK1P+uYLqprEAzNQJP+J4hTx4t/3X2nbVwszao8wD+9afLjBQYjz7Uk4ADP+Er++mJoScI42ueGtQOzEA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
    $(document).ready(function() {
    $('.paroller').paroller();
  });
   // Carousel functionality for Next and Previous buttons
document.querySelector('.next-btn').addEventListener('click', function() {
  const carousel = document.querySelector('.testimonials-carousel');
  const firstItem = carousel.firstElementChild;
  carousel.appendChild(firstItem);  // Move the first testimonial to the end
});

document.querySelector('.prev-btn').addEventListener('click', function() {
  const carousel = document.querySelector('.testimonials-carousel');
  const lastItem = carousel.lastElementChild;
  carousel.prepend(lastItem);  // Move the last testimonial to the start
});

   AOS.init();
   const swiper = new Swiper('.swiper-container', {
  slidesPerView: 1, 
  spaceBetween: 15,
  loop: true,
  pagination: {
    el: '.swiper-pagination',
    clickable: true,
  },
  navigation: {
    nextEl: '.swiper-button-next',
    prevEl: '.swiper-button-prev',
  },
  breakpoints: {
    768: {
      slidesPerView: 3, 
      spaceBetween: 20,  
    },
    576: {
      slidesPerView: 2,
      spaceBetween: 10,
    },
  },
  effect: 'slide',
});

</script>
</body>
</html>