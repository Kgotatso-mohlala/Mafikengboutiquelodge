</div>
<!-- Topbar End -->

<!-- Navbar & Hero Start -->
<header class="container-fluid position-relative p-0">
  <div class="main-menu">
    <nav class="navbar navbar-expand-lg navbar-light px-4 px-lg-5 py-3 py-lg-0 sticky-navbar">
      <a href="" class="navbar-brand p-0">
        <h1 class="text-primary m-0"><i class="fa fa-map-marker-alt me-3"></i>Mafikeng Boutique Lodge</h1>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
        <span class="fa fa-bars"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <div class="navbar-nav ms-auto py-0">
          <a href="/" class="nav-item nav-link active">Home</a>
          <a href="/about" class="nav-item nav-link">About</a>
          <a href="/gallery" class="nav-item nav-link">Gallery</a>
          <a href="/contact" class="nav-item nav-link">Contact</a>
          <a href="/bookings" class="nav-item nav-link">Booking</a>
        </div>
      </div>
    </nav>

    <!-- Hero Section with Carousel -->
    <div class="hero-carousel">
      <div class="hero-item" style="background-image: url('../assets/hero/hero-1.webp');"></div>
      <div class="hero-item" style="background-image: url('../assets/hero/hero-2.webp');"></div>
      <div class="hero-item" style="background-image: url('../assets/hero/hero3-.webp');"></div>
    </div>

    <!-- Hero Header -->
    <div class="hero-header">
      <h1>Welcome to Mafikeng Boutique Lodge</h1>
