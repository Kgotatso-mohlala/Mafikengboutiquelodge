      "name": "Eagle’s Nest Lodge",
      "description": "A luxurious lodge offering world-class services in Mafikeng.",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "123 Lodge Road",
        "addressLocality": "Mafikeng",
        "addressRegion": "North West",
        "postalCode": "2745",
        "addressCountry": "South Africa"
      },
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+27-123-456-789",
        "contactType": "Customer Service"
      }
    }
    </script>    
</head>
<body>
  <%- include("../partials/_topbar.ejs") %>
<!-- Navbar & Hero Start -->
<header class="container-fluid position-relative p-0">
  <div class="main-menu">
    <%- include("../partials/_navbar.ejs") %>

    <!-- Hero Header -->
    <div class="hero">
      <div class="hero-content">
        <h1>Welcome to Serenade Palace</h1>
