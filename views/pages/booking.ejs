<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Your Stay</title>
    <!-- AOS Animation Library -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Toastify CSS -->
    <link href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css" rel="stylesheet">
    <!-- Swiper CSS for Image Grid -->
    <link href="https://cdn.jsdelivr.net/npm/swiper@6.8.1/swiper-bundle.min.css" rel="stylesheet">
    <style>
        /* Custom styling for the booking section */
.booking-section {
    margin-top: 50px;
    padding-bottom: 50px;
}

.booking-form, .image-gallery {
    background-color: #f8f9fa;
    border-radius: 8px;
    padding: 20px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease-in-out;
}

.booking-form:hover, .image-gallery:hover {
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
    transform: translateY(-5px);
}

/* Flexbox for equal height */
.booking-row {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
}

.booking-form, .image-gallery {
    flex: 1;
}

/* Swiper Image Grid */
.swiper-container {
    width: 100%;
    height: 100%;
}

.swiper-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
    transition: transform 0.3s ease;
}

.swiper-slide:hover img {
    transform: scale(1.1);
}

/* Responsive styling */
@media (max-width: 768px) {
    .booking-form, .image-gallery {
        flex: 100%;
        margin-bottom: 20px;
        height: auto;
    }
}

.booking-form input, .booking-form select, .booking-form textarea {
    margin-bottom: 15px;
    border-radius: 6px;
    border: 1px solid #ddd;
    transition: border 0.3s ease;
    padding: 12px;
}

.booking-form input:focus, .booking-form select:focus, .booking-form textarea:focus {
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
}

/* Custom error styling */
.is-invalid {
    border-color: #dc3545 !important;
    box-shadow: 0 0 5px rgba(220, 53, 69, 0.5);
}

/* Error animations with AOS */
.invalid-feedback {
    display: none;
    opacity: 0;
    animation: fadeInUp 0.5s ease;
}

.is-invalid + .invalid-feedback {
    display: block;
    opacity: 1;
    animation: fadeInUp 0.5s ease;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Button styling */
.btn-primary {
    background-color: #007bff;
    border: none;
    padding: 12px 25px;
    font-size: 16px;
    border-radius: 6px;
    transition: background-color 0.3s ease, transform 0.3s ease;
}

.btn-primary:hover {
    background-color: #0056b3;
    transform: translateY(-3px);
}

/* Swiper Custom Pagination */
.swiper-pagination-bullet {
    background-color: #007bff;
    transition: background-color 0.3s ease;
}

.swiper-pagination-bullet-active {
    background-color: #0056b3;
}

    </style>
</head>
<body>

    <div class="container booking-section" data-aos="fade-up">
        <div class="booking-row">
            <!-- Booking Form -->
            <div class="booking-form col-lg-6 col-md-12" data-aos="fade-up" data-aos-delay="200">
                <h3>Book Your Stay</h3>
                <form id="bookingForm" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" required>
                        <div class="invalid-feedback">Please enter your username.</div>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" required>
                        <div class="invalid-feedback">Please enter a valid email.</div>
                    </div>
                    <div class="mb-3">
                        <label for="room" class="form-label">Room Number</label>
                        <select class="form-select" id="room" required>
                            <option value="">Select Room</option>
                            <option value="1">Room 1</option>
                            <option value="2">Room 2</option>
                            <option value="3">Room 3</option>
                            <option value="4">Room 4</option>
                            <option value="5">Room 5</option>
                            <option value="6">Room 6</option>
                        </select>
                        <div class="invalid-feedback">Please select a room.</div>
                    </div>
                    <div class="mb-3">
                        <label for="adults" class="form-label">Number of Adults</label>
                        <select class="form-select" id="adults" required>
                            <option value="">Select Number of Adults</option>
                            <option value="1">1 Adult</option>
                            <option value="2">2 Adults</option>
                        </select>
                        <div class="invalid-feedback">Please select the number of adults.</div>
                    </div>
                    <div class="mb-3">
                        <label for="children" class="form-label">Number of Children</label>
                        <select class="form-select" id="children">
                            <option value="">Select Number of Children</option>
                            <option value="0">0 Children</option>
                            <option value="1">1 Child</option>
                            <option value="2">2 Children</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Special Message (Optional)</label>
                        <textarea class="form-control" id="message" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>

            <!-- Image Gallery (Swiper.js) -->
            <div class="image-gallery col-lg-6 col-md-12" data-aos="fade-up" data-aos-delay="400">
                <div class="swiper-container">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <img src="assets/images/rooms/room-1.webp" alt="Room 1">
                        </div>
                        <div class="swiper-slide">
                            <img src="assets/images/rooms/room-2.webp" alt="Room 2">
                        </div>
                        <div class="swiper-slide">
                            <img src="assets/images/rooms/room-3.webp" alt="Room 3">
                        </div>
                        <div class="swiper-slide">
                            <img src="assets/images/rooms/room-4.webp" alt="Room 4">
                        </div>
                        <div class="swiper-slide">
                            <img src="assets/images/rooms/room-5.webp" alt="Room 5">
                        </div>
                        <div class="swiper-slide">
                            <img src="assets/images/rooms/room-6.webp" alt="Room 6">
                        </div>
                    </div>
                    <div class="swiper-pagination"></div>
                    <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Toastify JS -->
    <script src="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.js"></script>
    <!-- AOS Animation JS -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.1/dist/aos.js"></script>
    <!-- Swiper JS for Image Gallery -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@6.8.1/swiper-bundle.min.js"></script>
    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>

    <script>
        // Initialize AOS
        AOS.init();

        // Swiper setup
        const swiper = new Swiper('.swiper-container', {
            slidesPerView: 1,
            spaceBetween: 10,
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            breakpoints: {
                640: {
                    slidesPerView: 2,
                    spaceBetween: 20,
                },
                768: {
                    slidesPerView: 3,
                    spaceBetween: 30,
                },
            },
        });

        // Booking Form Validation and Toast Notification
        const form = document.getElementById('bookingForm');

        form.addEventListener('submit', function (e) {
            e.preventDefault();

            // Clear previous validation
            form.classList.remove('was-validated');
            let isValid = true;

            // Custom validation for each input
            const fields = ['username', 'email', 'room', 'adults'];

            fields.forEach(function (field) {
                const input = document.getElementById(field);
                if (!input.value.trim()) {
                    input.classList.add('is-invalid');
                    isValid = false;
                } else {
                    input.classList.remove('is-invalid');
                }
            });

            // If the form is valid, show a success toast
            if (isValid) {
                Toastify({
                    text: "Booking request submitted successfully!",
                    backgroundColor: "green",
                    close: true,
                    gravity: "top",
                    position: "right",
                    duration: 3000
                }).showToast();

                // Clear form after successful submission
                form.reset();
            }
        });

        // Remove the invalid class as soon as the user starts typing
        const inputs = document.querySelectorAll('.booking-form input, .booking-form select, .booking-form textarea');
        inputs.forEach(function(input) {
            input.addEventListener('input', function() {
                if (input.value.trim()) {
                    input.classList.remove('is-invalid');
                }
            });
        });
    </script>
</body>
</html>
